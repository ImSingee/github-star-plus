{
  "name": "@proj/db",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./migrate": {
      "types": "./src/migrate.ts",
      "default": "./src/migrate.ts"
    }
  },
  "dependencies": {
    "drizzle-orm": "^0.45.1",
    "postgres": "^3.4.7",
    "ulid": "^3.0.2"
  },
  "devDependencies": {
    "drizzle-kit": "^0.31.8"
  },
  "scripts": {
    "check:types": "tsc --noEmit -p tsconfig.json",
    "migrations:generate": "drizzle-kit generate --config ./drizzle.config.ts",
    "migrations:apply": "drizzle-kit migrate --config ./drizzle.config.ts",
    "migrations:push": "drizzle-kit push --config ./drizzle.config.ts",
    "drizzle:studio": "drizzle-kit studio --config ./drizzle.config.ts"
  }
}
