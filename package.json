{
  "name": "@proj/root",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22"
  },
  "packageManager": "pnpm@10.12.2",
  "scripts": {
    "dev": "pnpm --filter @proj/web dev",
    "dev:web": "pnpm --filter @proj/web dev",
    "dev:worker": "pnpm --filter @proj/worker dev",
    "build": "turbo run build",
    "build:web": "pnpm --filter @proj/web build",
    "build:worker": "pnpm --filter @proj/worker build",
    "preview": "pnpm --filter @proj/web preview",
    "preview:web": "pnpm --filter @proj/web preview",
    "preview:worker": "pnpm --filter @proj/worker start",
    "test": "turbo run test",
    "test:web": "pnpm --filter @proj/web test",
    "test:worker": "pnpm --filter @proj/worker test",
    "lint": "turbo run lint",
    "lint:web": "pnpm --filter @proj/web lint",
    "lint:worker": "pnpm --filter @proj/worker lint",
    "format": "prettier --write . && eslint --fix . && eslint .",
    "format:web": "pnpm --filter @proj/web format",
    "format:worker": "pnpm --filter @proj/worker format",
    "check:types": "turbo run check:types",
    "check:types:web": "pnpm --filter @proj/web check:types",
    "check:types:worker": "pnpm --filter @proj/worker check:types",
    "migrations:generate": "pnpm --filter @proj/db migrations:generate",
    "migrations:apply": "pnpm --filter @proj/db migrations:apply",
    "migrations:push": "pnpm --filter @proj/db migrations:push",
    "drizzle:studio": "pnpm --filter @proj/db drizzle:studio",
    "db:seed": "tsx scripts/seed-db.ts"
  },
  "dependencies": {},
  "devDependencies": {
    "@tanstack/eslint-config": "^0.3.4",
    "@types/node": "^24.10.4",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "lefthook": "^2.0.13",
    "prettier": "^3.7.4",
    "turbo": "^2.5.6",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "eslint",
      "lefthook"
    ]
  }
}
